void setup() {
  Serial.begin(115200);
  Serial.println("SHTC3 test");
  
  if (! shtc3.begin()) {
    Serial.println("Couldn't find SHTC3");
    while (1) delay(1);
  }
  
  Serial.println("Found SHTC3 sensor");

  #ifdef __DEBUG__
    delay(100);
    Serial.println("Iniciando pantalla OLED");
  #endif

  // Iniciar pantalla OLED en la direcci√≥n 0x3D
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3D)) {
#ifdef __DEBUG__
    Serial.println("No se encuentra la pantalla OLED");
#endif
    while (true);
  }
  display.clearDisplay();
  display.drawBitmap(0, 0, sens, 128, 64, SSD1306_WHITE);
  display.display();
  delay(5000);
  display.clearDisplay();  
}

void loop() {
  sensors_event_t humidity, temp;
  shtc3.getEvent(&humidity, &temp);// populate temp and humidity objects with fresh data
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  display.drawBitmap(0, 0, termometro, 64, 64, SSD1306_WHITE);
  display.setCursor(70, 25);
  display.print(temp.temperature); display.print(" C");
  display.setCursor(70, 35);
  display.print(humidity.relative_humidity); display.print("% rH");
  display.display();
  delay(100);
  
}
